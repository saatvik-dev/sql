{
  "include": ["server/**/*.ts", "shared/**/*.ts"],
  "exclude": ["node_modules", "build", "dist", "**/*.test.ts"],
  "compilerOptions": {
    "outDir": "server/dist",
    "rootDir": "server",
    "target": "ES6",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "incremental": true,
    "lib": ["esnext", "dom"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowImportingTsExtensions": true,
    "noEmit": false,
    "baseUrl": ".",
    "types": ["node"]
  }
}
